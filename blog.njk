<html>
  <head> </head>
  <body>
    <h1>Blog index</h1>

    <p>Blog posts by month, in reverse order</p>
    {% for year, posts in collections.byYear|dictsort|reverse %}
    <h2>{{ year }}</h2>
    <ul>
      {% for post in posts | reverse %}
      <li><a href="{{post.url}}">{{post.data.title}}</a></li>
      {% endfor %}
    </ul>
    {% endfor %}

    <p>Blog posts by year and by month, in reverse order.</p>
    {% for year, months in collections.byMonth|dictsort|reverse %}
    <h2>{{ year }}</h2>
    {% for month, posts in months|dictsort|reverse %}
    <h3>{{month|toMonth}}</h3>
    <ul>
      {% for post in posts | reverse %}
      <li><a href="{{post.url}}">{{post.data.title}}</a></li>
      {% endfor %}
    </ul>

    {% endfor %} {% endfor %}
  </body>
</html>
